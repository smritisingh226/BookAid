<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/frontpage"/>

    <ImageView
        android:id="@+id/logosmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/image1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/logosmall" />

    <TextView
        android:id="@+id/localtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_marginLeft="100dp"
        android:text="Local"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shoptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="7dp"
        android:text="shop"
        android:textColor="@color/black"
        android:textSize="40dp"/>


    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoptext"
        android:layout_marginLeft="20dp"
        android:text="Everything you need is in one place."
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/slogan"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagline"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Find your daily necessities of Brand. The world's largest fashion e-commerce has arrived ion a mobile shop now!"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/slogan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:minWidth="500dp"
        android:text="Login"
        android:textColorHighlight="@android:color/background_light" />


    <Button
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/Login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundstyle"
        android:minWidth="500dp"
        android:backgroundTint="@color/gray"
        android:text="Register" />

</RelativeLayout>